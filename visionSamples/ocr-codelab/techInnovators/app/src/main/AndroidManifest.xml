<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.google.android.gms.samples.vision.ocrproject"
    android:installLocation="auto">

    <uses-feature android:name="android.hardware.camera" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="false"
        android:hardwareAccelerated="true"
        android:icon="@drawable/ncit_logo"
        android:label="Read Smartly"
        android:logo="@drawable/ncit_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat">
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.gms.vision.DEPENDENCIES"
            android:value="ocr" />

        <activity
            android:name="com.google.android.gms.samples.vision.com.krishna.ocrproject.ProjectStarter"
            android:label="Read Smartly"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.google.android.gms.samples.vision.com.krishna.ocrproject.TextRecorder" />
        <activity android:name="com.google.android.gms.samples.vision.com.krishna.ocrproject.OcrCaptureActivity" />
        <activity android:name="com.google.android.gms.samples.vision.com.krishna.ocrproject.HomePage" />
        <activity android:name="com.google.android.gms.samples.vision.com.krishna.ocrproject.AboutUs"></activity>
    </application>

</manifest>